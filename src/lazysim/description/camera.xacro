<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <joint name="chassis_to_cam_servo" type="revolute">
        <parent link="chassis" />
        <child link="cam_servo_link" />
        <origin xyz="${camera_distance} 0 ${camera_height}" />
        <axis xyz="0 0 1" />
        <limit lower="${-pi/2}" upper="${pi/2}" effort="10" velocity="50" />
    </joint>

    <link name="cam_servo_link">
        <inertial>
            <mass value="${hinge_mass}" />
            <inertia ixx="${hinge_mass*0.01}" iyy="${hinge_mass*0.01}" izz="${hinge_mass*0.01}"
                ixy="0" ixz="0" iyz="0" />
        </inertial>
    </link>

    <joint name="camera_joint" type="fixed">
        <parent link="cam_servo_link"/>
        <child link="camera_link"/>
        <origin xyz="0 0 0" rpy="0 ${pi/24} 0"/>
    </joint>

    <link name="camera_link">
        <visual>
            <geometry>
                <box size="0.010 0.03 0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>


    <joint name="camera_optical_joint" type="fixed">
        <parent link="camera_link"/>
        <child link="camera_link_optical"/>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    </joint>

    <link name="camera_link_optical"></link>

    <gazebo reference="camera_link">
        <material>Gazebo/Red</material>

        <sensor name="camera" type="camera">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>60</update_rate>
            <camera>
                <!-- <horizontal_fov>2.7925268</horizontal_fov> -->
                <horizontal_fov>${pi/3}</horizontal_fov>
                <image>
                    <format>R8G8B8</format>
                    <width>640</width>
                    <height>480</height>
                </image>
                <clip>
                    <near>0.01</near>
                    <far>3.0</far>
                </clip>
            </camera>
            <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
                <frame_name>camera_link_optical</frame_name>
            </plugin>
        </sensor>
    </gazebo>

</robot>